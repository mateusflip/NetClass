@{
    ViewData["Title"] = "Home Page";
}
<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Funcionários Registrados</h5>
        <h6 class="card-subtitle mb-2 text-muted">Total</h6>
        <p class="card-text">@ViewData["qtdFuncionarios"]</p>
        <a asp-action="cadastrar" asp-controller="funcionario" class="card-link">Cadastrar</a>
        <a asp-action="index" asp-controller="funcionario" class="card-link">Listar</a>
    </div>
</div>