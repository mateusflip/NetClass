@model Funcionario

<div class="form-group">
    <label asp-for="Nome"></label>
    <input asp-for="Nome" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="DataContratacao"></label>
    <input asp-for="DataContratacao" class="form-control"/>
</div>
<div class="form-group">
    <label asp-for="Salario"></label>
    <input asp-for="Salario" class="form-control"/>
</div>
<div class="form-group">
    <label asp-for="Genero"></label>
    <select asp-for="Genero" asp-items="@Html.GetEnumSelectList<Genero>()" class="form-control">
        <option>Selecione</option>
    </select>
</div>

<div class="form-group">
    <input asp-for="Ativo" type="radio" value="true" id="verdadeiro"/>
    <label for="verdadeiro">Ativo</label>

    <input asp-for="Ativo" type="radio" value="false" id="falso"/>
    <label for="falso">Inativo</label>
</div>
<fieldset>
    <legend>Endereço</legend>
    <div class="form-group">
        <label asp-for="Endereco.Cep"></label>
        <input asp-for="Endereco.Cep" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Endereco.Logradouro"></label>
        <input asp-for="Endereco.Logradouro" class="form-control" />
    </div>

</fieldset>