@model Padaria 

@{ 
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar Padaria</h1>

@if(TempData["msg"] != null)
            {
                <div class="alert alert-success">
                    @TempData["msg"]
                </div>
            }



<form asp-action="cadastrar">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="DataAbertura"></label>
        <input asp-for="DataAbertura" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="Faturamento"></label>
        <input asp-for="Faturamento" class="form-control" />

    </div>
    <div class="form-group">
        <input asp-for="Disponivel" />
        <label asp-for="Disponivel"></label>


    </div>
    <input type="submit" class="btn btn-primary" value="Cadastrar"/>

</form>