@model List<Padaria>
@{
    ViewData["Title"] = "Index";
}

<h1>Padarias</h1>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}
<!--Uma tabela  para apresentar as padarias-->

<table>
    <tr>
        <th>Código</th>
        <th>Nome</th>
        <th>Data Abertura</th>
        <th>Faturamento</th>
        <th>Disponível</th>
        <th>Porte</th>
        <th>Cidade</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Codigo</td>
            <td>@item.Nome</td>
            <td>@item.DataAbertura.ToShortDateString()</td>
            <td>@item.Faturamento</td>
            <td>@item.Disponivel</td>
            <td>@item.Porte</td>
            <td>@item.Cidade</td>
            <td>
                <!--Envia o código da padaria pela url-->
                <a asp-route-id="@item.Codigo" asp-action="editar" class="btn btn-sm btn-primary">Editar</a>
                <a asp-route-id="@item.Codigo" asp-action="remover" class="btn btn-sm btn-danger">Remover</a>
            </td>
        </tr>
    }
</table>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
</button>
    <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title" id="exampleModalLabel">Modal title</h5><button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button></div><div class="modal-body">
                ...
            </div><div class="modal-footer"><button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button><button type="button" class="btn btn-primary">Save changes</button></div>
        </div>
    </div>
</div>

