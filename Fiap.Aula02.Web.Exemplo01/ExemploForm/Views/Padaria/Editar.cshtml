@model Padaria
@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<form asp-action="editar">
    <input asp-for="Codigo"/>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="DataAbertura"></label>
        <input asp-for="DataAbertura" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="Faturamento"></label>
        <input asp-for="Faturamento" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="Porte"></label>
        <select asp-items="@Html.GetEnumSelectList<Porte>()" class="form-control">
            <option>Selecione</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Cidade"></label>
        <select asp-for="Cidade" class="form-control" asp-items="@ViewBag.cidades">
            <option>Selecione</option>
        </select>
    </div>
    <div class="form-group">
        <input asp-for="Disponivel" />
        <label asp-for="Disponivel"></label>

    </div>
    <input type="submit" class="btn btn-primary" value="Cadastrar" />
    <a asp-action="index" class="btn btn-dark">Padarias</a>
</form>